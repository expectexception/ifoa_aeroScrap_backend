# Production Environment Configuration Template
# Copy this to .env and configure for your production environment

# Django Settings
SECRET_KEY=your-very-secret-key-change-this-in-production
DEBUG=0
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,api.your-domain.com

# Database Configuration
DB_USE_POSTGRES=1
DB_NAME=aeroops_prod
DB_USER=aeroops_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# CORS Configuration
CORS_ALLOW_ALL=0
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Security Settings (Production)
SECURE_SSL_REDIRECT=1
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1
SECURE_BROWSER_XSS_FILTER=1
SECURE_CONTENT_TYPE_NOSNIFF=1
X_FRAME_OPTIONS=DENY

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=10080

# Rate Limiting
RATE_LIMIT_ENABLED=1
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Caching (Redis)
CACHE_ENABLED=1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com
ADMIN_EMAIL=admin@your-domain.com

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=1
LOG_SQL_QUERIES=0

# Scraper Settings
SCRAPER_MAX_PAGES=10
SCRAPER_TIMEOUT=300
SCRAPER_RETRY_COUNT=3
SCRAPER_CONCURRENT_LIMIT=2

# Static Files (Production)
STATIC_ROOT=/var/www/aeroops/static
MEDIA_ROOT=/var/www/aeroops/media

# Performance
DB_CONN_MAX_AGE=600
DB_POOL_SIZE=20
