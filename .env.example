# Environment variables for AeroScrap Backend
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env file with real secrets to source control

# ================================
# Django Core Settings
# ================================
SECRET_KEY='django-insecure-REPLACE-WITH-SECURE-KEY'
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,*

# ================================
# Database Configuration
# ================================
# Set DB_USE_POSTGRES=1 to use PostgreSQL, otherwise SQLite is used
DB_USE_POSTGRES=0
DB_NAME=aeroops_db
DB_USER=aeroops_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# PostgreSQL Configuration Notes:
# - Run ./setup_postgres.sh for automated setup
# - Or manually create database: CREATE DATABASE aeroops_db;
# - Create user: CREATE USER aeroops_user WITH PASSWORD 'password';
# - Grant privileges: GRANT ALL PRIVILEGES ON DATABASE aeroops_db TO aeroops_user;

# ================================
# API Security
# ================================
# Admin API key used by protected endpoints
# Leave empty to disable authentication (development only)
ADMIN_API_KEY='your-secure-api-key-here'

# ================================
# Timezone & Localization
# ================================
TIME_ZONE=UTC

# ================================
# Optional Services
# ================================
# Redis (for caching and task queues)
# REDIS_URL=redis://localhost:6379/0

# Sentry (for error tracking)
# SENTRY_DSN=https://your-sentry-dsn-here

# Email notifications (for scraper alerts)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=1
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_FROM=noreply@example.com
